<resources>

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/accent_color</item>
        <item name="colorPrimaryDark">@color/accent_color</item>
        <item name="colorAccent">@color/accent_color</item>
        <item name="colorControlNormal">@color/secondary_text</item>
        <item name="android:textColorHint">@color/accent_color</item>
        <item name="android:dialogTheme">@style/customDialog</item>
        <item name="android:editTextPreferenceStyle">@style/customEditText</item>
        <item name="android:editTextStyle">@style/customEditText</item>
    </style>

    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/dark_primary_color</item>
        <item name="colorAccent">@color/accent_color</item>
    </style>-->

    <style name="customDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/orange</item>
        <item name="colorControlNormal">@color/orange</item>
    </style>

    <style name="MyActionBar" parent="@style/Theme.AppCompat">
        <item name="background">@color/transparent</item>
    </style>

    <style name="customWidget" parent="@android:style/Theme.Holo">
        <item name="colorControlNormal">@color/gris_app</item>
        <item name="colorControlActivated">@color/accent_color</item>
        <item name="colorControlHighlight">@color/accent_color</item>
    </style>

    <style name="customSwitch" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">@color/gris_app</item>
        <item name="colorControlActivated">@color/verde_limon</item>
        <item name="colorControlHighlight">@color/verde_limon</item>
    </style>

    <style name="customEditText">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/editTextBackground</item>
        <item name="android:textColor">@color/accent_color</item>
        <item name="android:textColorHint">@color/accent_color</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="customEditTextWithe">
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?attr/editTextBackground</item>
        <item name="android:textColor">@color/text_icons</item>
        <item name="android:textColorHint">@color/text_icons</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Divider_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/divider_color</item>
    </style>

    <style name="Divider_vertical">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/divider_color</item>
    </style>

</resources>
